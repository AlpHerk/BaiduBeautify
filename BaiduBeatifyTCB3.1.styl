@-moz-document url-prefix("http://www.baidu.com/s"), url-prefix("https://www.baidu.com/s") {
	// =============卡片结果 高斯模糊============= //

    #container {
        margin: 0 !important;
        width: 100% !important;
    }
    #content_left,		/*卡片父容器调整*/
    #content_left>.ecom_pingzhuan.old-pmd+div,
    #content_left>.video_list_container {
        display: flex; 						  
        flex-wrap: wrap;
        justify-content: center;
        width: 100% !important;
        padding: 0px !important;
    }
    [id^="1"], [id^="2"], [id^="3"], [id^="4"], /*普通搜索结果*/
    [id^="5"], [id^="6"], [id^="7"], [id^="8"], [id^="9"],
    #content_left .video_list.video_short,      /*百度视频搜索*/
    #content_left>div[class='c-container result new-pmd'],
    #content_left>div[class='c-container result'] {
        width: 600px !important;            /*双栏卡片整体风格*/
        height: 123px !important;
        padding: 8px 0px 0px 8px !important;
        margin: 10px !important;
		display: block !important;
        overflow: auto !important;
        border-radius: card_radius !important; /*卡片结果圆角*/
        background: card_color !important;
		backdrop-filter: blur(card_blur);
        box-shadow: 0px 10px 15px 1px card_color - 60% !important;
        transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms;
        box-sizing: content-box!important;     /*部分卡片属性*/
    }
    #content_left>div>div>article>section>div, /*内嵌卡片 消除边界*/
    #content_left>div[class='c-container result'].c-result-content {
        box-shadow: none !important;
        margin: 0 !important;
        padding: 0 !important;
    }
}
@-moz-document url-prefix("http://www.baidu.com/s"), url-prefix("https://www.baidu.com/s") {
// =========百度搜索 颜色布局========= //

    // ———————————总体布局设置——————————— //
    .s_form   /*百度头布局*/ {
        width: 720px !important;
        margin: auto !important;
        padding: 0 !important;
    }
    .wrapper_new .s_ipt_wr /*百度搜索框*/ {

		backdrop-filter: blur(card_blur+5) !important;
        background-color: card_color + 25% !important;
		border-color : card_color - 25% !important;
		border-radius: card_radius, 0, card_radius, 0 !important;
    }
	.wrapper_new .s_btn_wr .s_btn /*搜索按钮*/ {
		backdrop-filter: blur(card_blur+5) !important;
		background-color: card_color - 50% !important;
		border-radius: 0, card_radius, card_radius, 0 !important;
		border: none !important;
	}
